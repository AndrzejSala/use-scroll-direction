{
  "version": "0.1.1",
  "description": "A simple, performant, and cross-browser hook for handling scroll in your next react app.",
  "keywords": [
    "react",
    "hook",
    "custom-hook",
    "typescript",
    "detect",
    "scroll",
    "scrolling",
    "direction",
    "position",
    "window",
    "ref",
    "frontend"
  ],
  "bugs": {
    "url": "https://github.com/AndrzejSala/use-scroll-direction/issues"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AndrzejSala/use-scroll-direction"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "publish": "npm publish --access=public"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "use-scroll-direction",
  "author": "Andrzej Sala <sky0.as@gmail.com>",
  "module": "dist/use-scroll-direction.esm.js",
  "size-limit": [
    {
      "path": "dist/use-scroll-direction.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/use-scroll-direction.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^5.0.3",
    "@types/lodash.debounce": "^4.0.6",
    "@types/lodash.throttle": "^4.1.6",
    "@types/react": "^17.0.21",
    "@types/react-dom": "^17.0.9",
    "husky": "^7.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "size-limit": "^5.0.3",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "lodash.debounce": "^4.0.8",
    "lodash.throttle": "^4.1.1"
  }
}
